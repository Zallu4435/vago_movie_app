{
  "name": "movie-search-backend",
  "version": "1.0.0",
  "description": "Movie Search & Favorites API",
  "main": "dist/main/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc --project tsconfig.prod.json",
    "start": "node dist/main/server.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit --project tsconfig.dev.json"
  },
  "keywords": [
    "express",
    "typescript",
    "jest",
    "supertest",
    "nodemon",
    "prettier",
    "eslint"
  ],
  "author": "Unknown",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@types/node": "^24.9.1",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/cors": "^2.8.19",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "uuid": "^9.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
